@model HomePageViewModel
@using EPRN.Portal.Resources;
@using EPRN.Portal.Services.Interfaces;
@using Microsoft.AspNetCore.Mvc.Routing;

@{
    ViewData["Title"] = HomePageResources.HomePage_Title;
}

<div class="govuk-body"><a asp-action="Index">@HomePageResources.HomeLink</a></div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <span class="govuk-caption-l">@Model.ContactName</span>
        <h1 class="govuk-heading-xl">@Model.Name
        <p class="govuk-body-s">@Model.AccountNumber</p>

        <div class="flex-container govuk-grid-row">
            @foreach (CardViewModel cardViewModel in Model.CardViewModels)
            {
                <div class="govuk-grid-column-one-half">
                    @await Html.PartialAsync("_accountSummaryCard", cardViewModel)
                </div>
            }
        </div>
        </h1>
    </div>
</div>