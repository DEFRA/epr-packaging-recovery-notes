@model CardViewModel

<div class="govuk-summary-card">
    <div class="govuk-summary-card__title-wrapper">
        <div class="govuk-summary-card__title">
            <div class="govuk-heading-m">@Model.Title</div>
            <p class="govuk-caption-m">
                @Model.Description
            </p>
        </div>
    </div>
    <div class="govuk-summary-card__content">
        @if (Model.Links != null)
        {
            Dictionary<string, string> links = (Dictionary<string, string>)(Model.Links);
            if (links != null)
            {
                <ul class="govuk-list">
                    @foreach (var link in links)
                    {
                        <li>
                            <a class="govuk-link govuk-link--no-visited-state" href="@link.Value">@link.Key</a>
                        </li>
                    }
                </ul>
            }
        }
    </div>
</div>

