@using EPRN.Common.Enums;

@model ReProcessorExportViewModel
@{
    ViewData["Title"] = ReProcessorExportResource.PageTitle;
}

<partial name="_ValidationSummary" />
<partial name="_WasteTypeName" />
<form method="post">
    <radios asp-for="SelectedSite" asp-title="@ReProcessorExportResource.Heading">
        <p class="govuk-error-message">
            <span asp-validation-for="SelectedSite"></span>
        </p>

        <div class="govuk-radios__item">
            <input class="govuk-radios__input" type="radio" asp-for="SelectedSite" value=1 aria-describedby="Clean Earth LLC_24 Louvre St, France. 67899">
            <label class="govuk-label govuk-radios__label" for="Clean Earth LLC_24 Louvre St, France. 67899">
                Clean Earth LLC_24 Louvre St, France. 67899
            </label>
        </div>

        <div class="govuk-radios__item">
            <input class="govuk-radios__input" type="radio" asp-for="SelectedSite" value=2 aria-describedby="Recycle Now LTD. 12 Teamo St, Spain. 12345">
            <label class="govuk-label govuk-radios__label" for="Recycle Now LTD. 12 Teamo St. Spain. 12345">
                Recycle Now LTD. 12 Teamo St. Spain. 12345
            </label>
        </div>

        <div class="govuk-radios__item">
            <input class="govuk-radios__input" type="radio" asp-for="SelectedSite" value=3 aria-describedby="Recycle Now LTD. 12 Holland St, Holland. 098765">
            <label class="govuk-label govuk-radios__label" for="Recycle Now LTD. 12 Holland St, Holland. 098765">
                Recycle Now LTD. 12 Holland St, Holland. 098765
            </label>
        </div>

    </radios>

    <button class="govuk-button" data-module="govuk-button" type="submit">
        @MasterResources.ContinueBtn
    </button>
</form>