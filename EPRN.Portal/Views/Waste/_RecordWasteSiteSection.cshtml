@model SiteSectionViewModel

<div>
    <h3>Accreditations for: @Model.SiteName</h3>

    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">Material</th>
                <th scope="col" class="govuk-table__header"></th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            @foreach (var siteMaterial in Model.SiteMaterials)
            {
            <tr class="govuk-table__row">
                <td scope="row" class="govuk-table__cell">@siteMaterial.Value</td>
                <td class="govuk-table__cell">
                    <a asp-action="Create" asp-controller="Waste" asp-route-materialId="@siteMaterial.Key" asp-route-category='@((int)ViewData["category"])'>Choose</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>