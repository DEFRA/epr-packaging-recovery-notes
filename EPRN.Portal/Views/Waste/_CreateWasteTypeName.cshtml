@inject WasteCommonViewModel wasteMetaData;
@model EPRN.Common.Enums.Category;

@{
    var prnType = "";
    switch (Model)
    {
        case EPRN.Common.Enums.Category.Unknown:
            prnType = "<UNKNOWN WASTE TYPE>";
            break;

        case EPRN.Common.Enums.Category.Exporter:
            prnType = "PERN";
            break;

        case EPRN.Common.Enums.Category.Reprocessor:
            prnType = "PRN";
            break;

    }
}

<span class="govuk-caption-l">
    @MasterResources.CreateWithReplace.Replace("<PRNTYPE>", prnType) @wasteMetaData.WasteName
</span>
