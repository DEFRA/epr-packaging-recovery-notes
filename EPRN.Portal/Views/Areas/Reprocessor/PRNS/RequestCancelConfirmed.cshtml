@model RequestCancelViewModel

@{
    ViewData["Title"] = RequestCancelConfirmedResources.PageTitle;
}

<div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
    <div class="govuk-notification-banner__header">
        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
            @MasterResources.SuccessMessage
        </h2>
    </div>
    <div class="govuk-notification-banner__content">
        <h3 class="govuk-notification-banner__heading">
            @string.Format(RequestCancelConfirmedResources.CancellationRequestSent, Model.Reference, Model.Regulator)
        </h3>
    </div>
</div>
<h3 class="govuk-notification-banner__heading">
    @RequestCancelConfirmedResources.WhatHappensNextHeading
</h3>
<p class="govuk-body">
    @string.Format(RequestCancelConfirmedResources.WhatHappensNextMessage, Model.Producer, Model.Regulator)
</p>