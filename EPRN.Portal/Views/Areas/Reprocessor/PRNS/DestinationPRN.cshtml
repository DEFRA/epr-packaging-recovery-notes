@using EPRN.Common.Enums;
@using EPRN.Portal.Services.Interfaces;
@using EPRN.Portal.Helpers.Extensions;

@inject IUserRoleService userRoleService;

@model DestinationPrnViewModel
@{
    ViewData["Title"] = DestinationPRNResources.Title;
}

<partial name="_ValidationSummary" />
<form method="post">
    <radios asp-for="DoWithPRN" asp-title="@DestinationPRNResources.Heading">
        <p class="govuk-error-message">
            <span asp-validation-for="DoWithPRN"></span>
        </p>

        <div class="govuk-radios__item">
            <input class="govuk-radios__input" type="radio" asp-for="DoWithPRN" value="@PrnStatus.Complete" aria-describedby="@DestinationPRNResources.SendItTo">
            <label class="govuk-label govuk-radios__label" for="@DestinationPRNResources.SendItTo">
                @DestinationPRNResources.SendItTo
            </label>
        </div>

        <div class="govuk-radios__item">
            <input class="govuk-radios__input" type="radio" asp-for="DoWithPRN" value="@PrnStatus.Draft" aria-describedby="@DestinationPRNResources.SaveItAsDraft">
            <label class="govuk-label govuk-radios__label" for="@DestinationPRNResources.SaveItAsDraft">
                @DestinationPRNResources.SaveItAsDraft
            </label>
        </div>

    </radios>

    <button class="govuk-button" data-module="govuk-button" type="submit">
        @MasterResources.ContinueBtn
    </button>
</form>