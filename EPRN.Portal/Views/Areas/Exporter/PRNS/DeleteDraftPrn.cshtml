@{
    ViewData["Title"] = "Do you want to delete this draft PRN?";
}

<form method="post">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">Do you want to delete this draft PRN?</h1>
            <h2 class="govuk-body-m">You are about to delete draft . This action cannot be undone.</h2>
            <div class="govuk-button-group">
                <button class="govuk-button" data-module="govuk-button" type="submit">
                    Confirm and continue
                </button>
                <a class="govuk-link" href="/">Cancel</a>
            </div>
        </div>
    </div>
</form>