<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">

        <h2 class="govuk-heading-l">View draft PRNs</h2>
        <p class="govuk-body">View, edit or delete a draft PRN</p>


        <form class="form" method="POST">

            <table class="govuk-table">

                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header">PRN number</th>
                        <th scope="col" class="govuk-table__header">Material</th>
                        <th scope="col" class="govuk-table__header">Sent to</th>
                        <th scope="col" class="govuk-table__header">Date created</th>
                        <th scope="col" class="govuk-table__header">Tonnage</th>
                    </tr>
                </thead>

                <tbody class="govuk-table__body">               
                    @for(var index = 0; index <= 5; index++)
                    {
                        <tr class="govuk-table__row">
                            <td class="govuk-table__cell">
                                <div class="govuk-radios" data-module="govuk-radios">
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="organisation" name="prnId" type="radio" value="PRN1">
                                        <label class="govuk-label govuk-radios__label" for="organisation">
                                            <a href="draft-prn">  PRN1xx</a>
                                        </label>
                                    </div>
                                </div>
                            </td>
                            <td class="govuk-table__cell">Paper/board</td>
                            <td class="govuk-table__cell">Tesco</td>
                            <td class="govuk-table__cell">02/12/2023</td>
                            <td class="govuk-table__cell">176 </td>
                        </tr>
                    }
                </tbody>

            </table>

            <input class="govuk-button" type="submit" value="Continue editing" style="margin-right: 20px;" />
            <a href="./delete-draft"><input class="govuk-button govuk-button--secondary" type="submit" value="Delete PRN" /></a>

        </form>


    </div>
</div>



