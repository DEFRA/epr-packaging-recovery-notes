@using Portal.Resources;
@using Portal.ViewModels;

@model DuringWhichMonthRequestViewModel

@{
    ViewData["Title"] = @WhichQuarterResources.PageTitle;
}

<a href="/" class="govuk-back-link">@MasterResources.Back</a>
<form method="post">
    <input type="hidden" asp-for="JourneyId" />
    <partial name="_ValidationSummary" />
    <div id="SelectedMonth" class="govuk-form-group @(!ViewContext.ViewData.ModelState.IsValid ? "govuk-form-group--error" : string.Empty)">
        <fieldset class="govuk-fieldset" aria-describedby="month-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <span class="govuk-caption-l">
                    @MasterResources.RecordingFor @Model.WasteType
                </span>
                <h1 class="govuk-fieldset__heading">
                    @WhichQuarterResources.Heading
                </h1>
            </legend>
            <div id="month-hint" class="govuk-hint">
                @WhichQuarterResources.HintText
            </div>
            <div class="govuk-radios" data-module="govuk-radios">
                <p class="govuk-error-message">
                    <span asp-validation-for="SelectedMonth"></span>
                </p>
                @foreach (var element in Model.Quarter)
                {
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="@element.Key" name="SelectedMonth" type="radio" value="@element.Key" aria-describedby="@element.Key">
                        <label class="govuk-label govuk-radios__label" for="@element.Key">
                            @element.Value
                        </label>
                    </div>
                }
            </div>
        </fieldset>
    </div>

    <button class="govuk-button" data-module="govuk-button" type="submit">
        @MasterResources.ContinueBtn
    </button>
</form>