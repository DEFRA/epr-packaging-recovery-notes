@using Portal.Models;
@using Portal.Resources;
@model Portal.Models.DuringWhichMonthRequestViewModel

<div class="govuk-phase-banner">
    <p class="govuk-phase-banner__content">
        <strong class="govuk-tag govuk-phase-banner__content__tag">
            Private Beta
        </strong>
        <span class="govuk-phase-banner__text">
            This is a new service – your <a class="govuk-link" href="#">feedback</a> will help us to improve it.
        </span>
    </p>
</div>
<a href="/" class="govuk-back-link">Back</a>
<form method="post">
    <div class="govuk-error-summary @(ViewContext.ViewData.ModelState.IsValid ? "govuk-visually-hidden" : string.Empty)" data-module="govuk-error-summary">
        <div role="alert">
            <h2 class="govuk-error-summary__title">
                There is a problem
            </h2>
            <div class="govuk-error-summary__body">
                <ul class="govuk-list govuk-error-summary__list">
                    <li>
                        <a href="#@Model.Months.First().Key">Select the month the waste was received</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="govuk-form-group @(!ViewContext.ViewData.ModelState.IsValid ? "govuk-form-group--error" : string.Empty)">
        <fieldset class="govuk-fieldset" aria-describedby="signIn-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <span class="govuk-caption-l">
                    @WhichQuarterResources.DuringWhichMonth_Label_Paper
                </span>
                <h1 class="govuk-fieldset__heading">
                    @WhichQuarterResources.DuringWhichMonth_Heading
                </h1>
            </legend>
            <div id="signIn-hint" class="govuk-hint">
                @WhichQuarterResources.DuringWhichMonth_HintText
            </div>
            <div class="govuk-radios" data-module="govuk-radios">
                <p class="govuk-error-message">
                    <span asp-validation-for="SelectedMonth"></span>
                </p>
                @foreach (var element in Model.Months)
                {
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="@element.Key" name="SelectedMonth" type="radio" value="@element.Key" aria-describedby="@element.Key">
                        <label class="govuk-label govuk-radios__label" for="@element.Key">
                            @element.Value
                        </label>
                    </div>
                }
            </div>
        </fieldset>
    </div>

    <button class="govuk-button" data-module="govuk-button" type="submit">
        @WhichQuarterResources.Site_Continue
    </button>
</form>


