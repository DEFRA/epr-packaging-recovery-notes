<div class="govuk-error-summary @(ViewContext.ViewData.ModelState.IsValid ? "govuk-visually-hidden" : string.Empty)" data-module="govuk-error-summary">
    <div role="alert">
        <h2 class="govuk-error-summary__title">
            @MasterResources.SummaryError
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @if (!ViewContext.ViewData.ModelState.IsValid)
                {
                    foreach (var fieldErrorCollection in ViewContext.ViewData.ModelState)
                    {
                        if (fieldErrorCollection.Value.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Valid)
                            continue;

                        foreach (var error in fieldErrorCollection.Value.Errors)
                        {
                            <li>
                                <a href="#@fieldErrorCollection.Key">@error.ErrorMessage</a>
                            </li>
                        }
                    }
                }
            </ul>
        </div>
    </div>
</div>